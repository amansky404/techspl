<%- include('partials/header') %>

<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <h1 class="page-title">Industry <span class="gradient-text">Solutions</span></h1>
        <p class="page-subtitle">Tailored Technology Solutions for Every Sector</p>
        <p class="sanskrit-quote">"समस्याः समाधानानि जन्यन्ते" - Problems give birth to solutions</p>
        <div class="breadcrumb">
            <a href="/"><i class="fas fa-home"></i> Home</a>
            <span>/</span>
            <span>Solutions</span>
        </div>
    </div>
</section>

<!-- Solutions Grid -->
<section class="solutions-section">
    <div class="container">
        <div class="solutions-grid">
            <% solutions.forEach(solution => { %>
            <div class="solution-card">
                <div class="solution-icon-large">
                    <span><%= solution.icon %></span>
                </div>
                <h2><%= solution.name %></h2>
                <p><%= solution.description %></p>
                <div class="solution-tech">
                    <h4>Technologies Used:</h4>
                    <div class="tech-tags">
                        <% solution.technologies.forEach(tech => { %>
                        <span class="tech-tag"><i class="fas fa-code"></i> <%= tech %></span>
                        <% }); %>
                    </div>
                </div>
                <div class="solution-stats">
                    <div class="stat-item">
                        <i class="fas fa-building"></i>
                        <span>50+ Implementations</span>
                    </div>
                    <div class="stat-item">
                        <i class="fas fa-star"></i>
                        <span>4.8/5 Rating</span>
                    </div>
                </div>
                <button class="btn btn-primary btn-block" onclick="openContactWithDetails('solution', '<%= solution.name %>')">
                    <i class="fas fa-envelope"></i> Request Information
                </button>
            </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- Solution Highlights -->
<section class="solution-highlights-section">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Why Our <span class="gradient-text">Solutions</span> Stand Out</h2>
        </div>
        <div class="highlights-grid">
            <div class="highlight-card">
                <div class="highlight-icon">
                    <i class="fas fa-puzzle-piece"></i>
                </div>
                <h3>Customizable</h3>
                <p>Tailored to your specific industry requirements and workflows</p>
            </div>
            <div class="highlight-card">
                <div class="highlight-icon">
                    <i class="fas fa-sync-alt"></i>
                </div>
                <h3>Integrated</h3>
                <p>Seamless integration with existing systems and processes</p>
            </div>
            <div class="highlight-card">
                <div class="highlight-icon">
                    <i class="fas fa-expand-arrows-alt"></i>
                </div>
                <h3>Scalable</h3>
                <p>Grows with your business from startup to enterprise</p>
            </div>
            <div class="highlight-card">
                <div class="highlight-icon">
                    <i class="fas fa-mobile-alt"></i>
                </div>
                <h3>Mobile Ready</h3>
                <p>Access your solutions anywhere, anytime on any device</p>
            </div>
        </div>
    </div>
</section>

<!-- Case Study CTA -->
<section class="case-study-cta">
    <div class="container">
        <div class="cta-content">
            <h2>See Our Solutions in Action</h2>
            <p>Explore real-world implementations and success stories</p>
            <a href="/projects" class="btn btn-light">
                <i class="fas fa-folder-open"></i> View Case Studies
            </a>
        </div>
    </div>
</section>

<script>
// Prefill contact form with solution details
function prefillContact(type, name) {
    setTimeout(() => {
        const subjectField = document.getElementById('subject');
        const messageField = document.getElementById('message');
        
        if (subjectField) {
            subjectField.value = type;
        }
        
        if (messageField) {
            const messages = {
                'solution': `I am interested in the solution: ${name}.\n\nPlease provide information about implementation, pricing, and timelines.\n\nThank you.`,
                'product': `I would like to inquire about the product: ${name}.\n\nPlease share pricing, specifications, and availability details.\n\nThank you.`,
                'service': `I am interested in learning more about your service: ${name}.\n\nPlease provide me with more details, pricing, and how to get started.\n\nThank you.`
            };
            messageField.value = messages[type] || `I am interested in: ${name}`;
        }
    }, 100);
}

// Open contact modal and prefill with details
function openContactWithDetails(type, name) {
    const contactModal = document.getElementById('contactModal');
    if (contactModal) {
        contactModal.classList.add('active');
        document.body.style.overflow = 'hidden';
        prefillContact(type, name);
    }
}
</script>

