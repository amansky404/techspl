<%- include('header') %>

<div class="page-header">
    <h1><i class="fas fa-chart-line"></i> Dashboard</h1>
    <p>Overview of your website content</p>
</div>

<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <i class="fas fa-box"></i>
        </div>
        <div class="stat-details">
            <h3><%= stats.products %></h3>
            <p>Products</p>
        </div>
        <a href="/admin/products" class="stat-link">Manage <i class="fas fa-arrow-right"></i></a>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
            <i class="fas fa-cogs"></i>
        </div>
        <div class="stat-details">
            <h3><%= stats.services %></h3>
            <p>Services</p>
        </div>
        <a href="/admin/services" class="stat-link">Manage <i class="fas fa-arrow-right"></i></a>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
            <i class="fas fa-lightbulb"></i>
        </div>
        <div class="stat-details">
            <h3><%= stats.solutions %></h3>
            <p>Solutions</p>
        </div>
        <a href="/admin/solutions" class="stat-link">Manage <i class="fas fa-arrow-right"></i></a>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
            <i class="fas fa-project-diagram"></i>
        </div>
        <div class="stat-details">
            <h3><%= stats.projects %></h3>
            <p>Projects</p>
        </div>
        <a href="/admin/projects" class="stat-link">Manage <i class="fas fa-arrow-right"></i></a>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
            <i class="fas fa-blog"></i>
        </div>
        <div class="stat-details">
            <h3><%= stats.blogPosts %></h3>
            <p>Blog Posts</p>
        </div>
        <a href="/admin/blog" class="stat-link">Manage <i class="fas fa-arrow-right"></i></a>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon" style="background: linear-gradient(135deg, #30cfd0 0%, #330867 100%);">
            <i class="fas fa-flask"></i>
        </div>
        <div class="stat-details">
            <h3><%= stats.innovations %></h3>
            <p>Innovations</p>
        </div>
        <a href="/admin/innovations" class="stat-link">Manage <i class="fas fa-arrow-right"></i></a>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon" style="background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);">
            <i class="fas fa-question-circle"></i>
        </div>
        <div class="stat-details">
            <h3><%= stats.faqs %></h3>
            <p>FAQs</p>
        </div>
        <a href="/admin/faqs" class="stat-link">Manage <i class="fas fa-arrow-right"></i></a>
    </div>
</div>

<div class="dashboard-info">
    <div class="info-card">
        <h3><i class="fas fa-info-circle"></i> Quick Info</h3>
        <ul>
            <li><i class="fas fa-shield-alt"></i> System Status: <span class="badge badge-success">Online</span></li>
            <li><i class="fas fa-clock"></i> Session: <span class="badge badge-info">Active</span></li>
            <li><i class="fas fa-user"></i> Logged in as: <strong><%= username %></strong></li>
        </ul>
    </div>
    
    <div class="info-card">
        <h3><i class="fas fa-rocket"></i> Quick Actions</h3>
        <div class="quick-actions">
            <a href="/admin/blog" class="quick-btn">
                <i class="fas fa-plus"></i> Add Blog Post
            </a>
            <a href="/admin/products" class="quick-btn">
                <i class="fas fa-plus"></i> Add Product
            </a>
            <a href="/admin/projects" class="quick-btn">
                <i class="fas fa-plus"></i> Add Project
            </a>
            <a href="/" target="_blank" class="quick-btn">
                <i class="fas fa-eye"></i> View Website
            </a>
        </div>
    </div>
</div>

<%- include('footer') %>
