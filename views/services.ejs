<%- include('partials/header') %>

<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <h1 class="page-title">Our <span class="gradient-text">Services</span></h1>
        <p class="page-subtitle">Comprehensive IT Services for Digital Transformation</p>
        <p class="sanskrit-quote">"सेवा परमो धर्मः" - Service is the highest duty</p>
        <div class="breadcrumb">
            <a href="/"><i class="fas fa-home"></i> Home</a>
            <span>/</span>
            <span>Services</span>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="services-detail-section">
    <div class="container">
        <% services.forEach((service, index) => { %>
        <div class="service-detail-card <%= index % 2 === 0 ? '' : 'reverse' %>">
            <div class="service-detail-content">
                <div class="service-detail-icon">
                    <span><%= service.icon %></span>
                </div>
                <h2><%= service.name %></h2>
                <p class="service-description"><%= service.description %></p>
                <div class="service-features-list">
                    <h4>Key Features:</h4>
                    <ul>
                        <% 
                        const features = Array.isArray(service.features) ? service.features : 
                                        (typeof service.features === 'string' ? service.features.split(',').map(f => f.trim()) : []);
                        features.forEach(feature => { %>
                        <li><i class="fas fa-check-circle"></i> <%= feature %></li>
                        <% }); %>
                    </ul>
                </div>
                <div class="service-actions">
                    <button class="btn btn-primary" onclick="openServiceModal(<%= services.indexOf(service) %>)">
                        <i class="fas fa-arrow-right"></i> Learn More
                    </button>
                    <button class="btn btn-outline" onclick="openContactWithDetails('service', '<%= service.name %>')">
                        <i class="fas fa-phone"></i> Get Quote
                    </button>
                </div>
            </div>
            <div class="service-detail-image">
                <% if (service.image) { %>
                    <img src="<%= service.image %>" alt="<%= service.name %>">
                <% } else { %>
                    <img src="https://images.unsplash.com/photo-<%= 1550751827 + services.indexOf(service) * 1000 %>-4bd374c3f58b?w=600&h=400&fit=crop" alt="<%= service.name %>">
                <% } %>
            </div>
        </div>
        <% }); %>
    </div>
</section>

